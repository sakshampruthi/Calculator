<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="#1B1A1A"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="80dp"
                android:height="80dp"
                />
            <stroke
                android:width="1dp"
                android:color="#2E2D2D"
                />

        </shape>
    </item>>
    <item android:state_pressed="true">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="#6F6D6D"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="80dp"
                android:height="80dp"
                />
            <stroke
                android:width="1dp"
                android:color="#444343"
                />

        </shape>
    </item>>
</selector>